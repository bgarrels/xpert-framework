    <tag>
        <tag-name>download</tag-name>
        <behavior>
            <behavior-id>xpert.faces.DownloadBehavior</behavior-id>
        </behavior>
        <attribute>
            <name>oncomplete</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>onstart</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>message</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>showModal</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>spread</tag-name>
        <component>
            <component-type>com.xpert.faces.component.Spread</component-type>
            <renderer-type>com.xpert.faces.component.SpreadRenderer</renderer-type>
        </component>
        <attribute>
            <name>columns</name>
            <required>false</required>
            <type>java.lang.Integer</type>
        </attribute>
        <attribute>
            <name>highlight</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
</facelet-taglib>