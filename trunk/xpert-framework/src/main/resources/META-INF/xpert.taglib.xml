
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                version="2.0">
    <namespace>http://xpert.com/faces</namespace>
    <tag>
        <tag-name>initializer</tag-name>
        <source>resources/xpert/components/initializer.xhtml</source>
    </tag>
    <tag>
        <tag-name>filterOnEnter</tag-name>
        <component>
            <component-type>com.xpert.faces.component.FilterOnEnter</component-type>
            <renderer-type>com.xpert.faces.component.FilterOnEnterRenderer</renderer-type>
        </component>
         <attribute>
            <name>target</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>selector</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>confirmation</tag-name>
        <component>
            <component-type>com.xpert.faces.component.Confirmation</component-type>
            <renderer-type>com.xpert.faces.component.ConfirmationRenderer</renderer-type>
        </component>
        <attribute>
            <name>message</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>confirmLabel</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>cancelLabelid</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
    </tag>
